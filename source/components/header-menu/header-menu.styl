@import '../../pages/colors.styl'

header
    .navbar.main-menu
        top: 0;
        width: 100%;
        padding: 0;
        margin: 0;
        background: $bg-color-menu
        z-index: 99;
        border-bottom: 1px solid #e8e9ee;

        ul
            width: 100%;

            li
                position: relative;
                margin-right: 55px;

                &.active
                    a
                        border-bottom: 2px solid $main-color;
                        color: $main-color;

                a
                    position: relative
                    color: $text-color-bold;
                    font-family: $text-family;
                    font-size: $text-size;
                    font-weight: 400;
                    padding: 20px 0px;
                    letter-spacing: .08em;
                    text-transform: uppercase;
                    border-bottom: 2px solid transparent;
                    transition: color .5s ease;

                    &::before
                        content: "";
                        position: absolute;
                        bottom: -2px;
                        left: 0;
                        width: 100%;
                        height: 2px;
                        background: $main-color;
                        transform: scale(0);
                        transition: transform .5s ease;

                    &:hover
                        &::before
                            transform: scale(1);
                            transition: transform .5s ease;

        .search
            color: $text-color-bold
            cursor: pointer

            &:hover
                color: $main-color;