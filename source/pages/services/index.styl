@import '../colors.styl'
@import '../base.styl'

section.service-info
    ul
        li
            margin-bottom: 10px;

    .carousel.slide
        .carousel-inner
            .carousel-item
                height: 350px;
                overflow: hidden;
                cursor: zoom-in;

                img
                    transform: scale(1)
                    transition: transform 1s ease;

                &:hover
                    img 
                        transform: scale(1.1)
                        transition: transform 1s ease;
        
        .carousel-indicators
            display: flex;
            justify-content: flex-start;
            align-items: center;
            margin: 10px 15px;

            span
                position: relative;
                width: 35px
                height: 35px
                margin: 15px 5px;
                display: flex;
                justify-content: center;
                align-items: center;
                font-size: 14px;
                color: black;
                font-weight: 500;
                border-radius: 50%;
                cursor: pointer;

                &:hover
                    font-weight: 600;

                &::before
                    content: '';
                    position: absolute;
                    width: 100%;
                    height: 100%;
                    background: $main-color;
                    border-radius: 50%;
                    transform: scale(0);
                    z-index: -1;
                    transition: transform 0.5s ease-out;

                &.active
                    color: white;

                    &::before
                        transform: scale(1);
                        transition: transform 0.5s ease-out;


section.solutions
    .solutions-box
        overflow: hidden;
        padding: 15px 0;

        a
            display: flex;
            position: relative;

            
            .solutions-caption
                position: absolute;
                left: -100%;
                display: flex;
                width: 100%;
                height: 100%;
                background: transparent;
                color: transparent;
                top: 0;
                padding: 30px;
                color: #fff;
                background: rgba(45,55,66,0.6);
                justify-content: flex-end;
                align-items: flex-start;
                flex-direction: column;
                opacity: (0);
                transition: left 1s ease, opacity 0.5s ease;

                span.solutions-caption-title
                    font-size: 24px;


        &:hover
            .solutions-caption
                left: 0;
                opacity: (1);
                transition: left 0.5s ease, opacity 0.5s ease;
      
section.tabs
    .tab-content
        padding: 20px 0;

        .tab-pane
            padding: 0;

            ul
                li
                    margin-bottom: 10px;

    ul.nav.nav-tabs
        li.nav-item
            position: relative;

            a.nav-link
                position: relative;
                padding: 10px 0;
                margin-right: 20px;
                font-size: 20px;
                color: $text-color;
                border: none;
                border-radius: 0;
                background: transparent;
                overflow hidden
                
                &::before
                    content: '';
                    position: absolute;
                    //left: -100%;
                    bottom: 0;
                    background: $main-color;
                    width: 100%;
                    height: 1px;
                    transform: scale(0);
                    transition: transform 0.5s ease, color 0.5s ease;

                &:hover,&.active
                    color: $text-color-bold;
                    transition: color 0.5s ease;

                    &::before
                        //left: 0;
                        transform: scale(1);
                        transition: transform 0.5s ease;

                &.active
                    color: $text-color-bold;
                   
@media only screen and (max-width: 760px)
    .service-info
        .description
            margin-top: 25px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: justify;

    section.tabs

        ul.nav.nav-tabs
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            border-bottom: none;
            margin-bottom: 20px;

        .tab-content
            padding: 20px 0;

            .tab-pane
                padding: 0;

                ul  
                    li
                        margin-bottom: 10px;

    section.solutions
        .solutions-box
            a
                .solutions-caption
                    left: 0;
                    opacity: (1);